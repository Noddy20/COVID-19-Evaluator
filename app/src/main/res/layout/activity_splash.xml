<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryTheme"
    tools:context="com.mdm_app_covid_19.views.activities.SplashActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imgBg"
        />

    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_100sdp"
        android:id="@+id/imgCovidLogo"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/powered_by"
        android:layout_above="@id/txtMdmTitle"
        android:gravity="center"
        android:textSize="@dimen/_10ssp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:textColor="@color/colorWhite"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_mdm_hospital"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:id="@+id/txtMdmTitle"
        android:textSize="@dimen/_12ssp"
        android:layout_marginBottom="@dimen/_40sdp"
        />

</RelativeLayout>
